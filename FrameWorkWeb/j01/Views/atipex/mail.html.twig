    {% extends "atipexBundle::layout.html.twig" %}
{% block title %}
Login - {{ parent() }}
{% endblock %}
{% block Atipex_body %}
<form class="form-horizontal" method="POST" action="#">
<fieldset>
<legend>
 {% if app.session.get('langue') is empty %}Send mail{% else %}Envoyer des mails{% endif %}</legend>
<div class="control-group">
  <label class="control-label" for="subject">{% if app.session.get('langue') is empty %}Subject{% else %}Sujet{% endif %}</label>
  <div class="controls">
    <input id="subject" name="subject" placeholder="Subject" class="input-medium" type="xt" onClick= "this.value='';" >
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="content">{% if app.session.get('langue') is empty %}Content{% else %}Contenu{% endif %}
  </label>
  <div class="controls">                     
    <textarea id="content" name="content" placeholder="Content" >Content mail</textarea>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="submit"></label>
  <div class="controls">
    <button id="submit" name="submit" class="btn btn-primary">Submit</button>
    <button id="Reset" name="Reset" type="reset" class="btn btn-inverse">Reset</button>
  </div>
</div>
</fieldset>
</form>
<a  align="center" href="{{ path('admin') }}"> {% if app.session.get('langue') is empty %}Go Crud here{% else %}Allez vers Crud{% endif %}</a>
{% endblock %}
