{% extends '::base.html.twig' %}

{% block body -%}
     {% if app.session.get('admin') == 'on' %}
    <a  align="center" href="{{ path('atipex_start') }}">  {% if app.session.get('langue') is empty %}Back{% else %}Retour{% endif %}</a>
     {% else %}
    <h1>member</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ entity.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin') }}">
            {% if app.session.get('langue') is empty %}Back to the list{% else %}Retour à la liste{% endif %}
        </a>
    </li>
    <li>
        <a href="{{ path('admin_edit', { 'id': entity.id }) }}">
             {% if app.session.get('langue') is empty %}Edit{% else %}Editer{% endif %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
<a  align="center" href="{{ path('atipex_alogout') }}"> {% if app.session.get('langue') is empty %}Delog here{% else %}Se déconnecter{% endif %}</a>
{% endif %}
{% endblock %}
