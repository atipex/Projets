{% extends '::base.html.twig' %}

{% block body -%}
     {% if app.session.get('admin') == 'on' %}
    <a  align="center" href="{{ path('atipex_start') }}">  {% if app.session.get('langue') is empty %}Back{% else %}Retour{% endif %}</a>
     {% else %}
    <h1>member list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Password</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_show', { 'id': entity.id }) }}"> {% if app.session.get('langue') is empty %}Show{% else %}Afficher{% endif %}</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_edit', { 'id': entity.id }) }}"> {% if app.session.get('langue') is empty %}Edit{% else %}Editer{% endif %}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_new') }}">
                {% if app.session.get('langue') is empty %}Create new entry{% else %}Creation d'un nouveau membre{% endif %}
            </a>
        </li>
    </ul>
<a  align="center" href="{{ path('atipex_alogout') }}"> {% if app.session.get('langue') is empty %}Delog here{% else %}Se d√©connecter{% endif %}</a>
    {% endif %}
    {% endblock %}
