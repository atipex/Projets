{% extends '::base.html.twig' %}

{% block body -%}
     {% if app.session.get('admin') is empty %}
<a  align="center" href="{{ path('atipex_start') }}"> BACK</a>
     {% else %}
    <h1>member</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ entity.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
<a  align="center" href="{{ path('atipex_alogout') }}"> DELOG HERE</a>
{% endif %}
{% endblock %}
